{
  "name": "web-connectors",
  "version": "0.0.0",
  "description": "",
  "private": true,
  "type": "module",
  "keywords": [],
  "author": "THEO Technologies NV",
  "license": "MIT",
  "workspaces": [
    "adscript",
    "cmcd",
    "comscore",
    "conviva",
    "gemius",
    "nielsen",
    "yospace"
  ],
  "scripts": {
    "changeset:version": "changeset version && node .changeset/post-process.mjs",
    "build": "npm run build --workspaces",
    "clean": "npm run clean --workspaces",
    "test": "npm run test:typecheck && npm run test:unit && npm run test:docs",
    "test:typecheck": "npm run test:typecheck --workspaces",
    "test:unit": "vitest --run",
    "prettier": "prettier --check \"*/(src|test)/**/*\"",
    "prettier:fix": "prettier --write \"*/(src|test)/**/*\"",
    "lint": "eslint \"*/src/**/*.ts\" \"*/test*/**/*.ts\"",
    "lint:fix": "npm run lint -- --fix",
    "docs": "typedoc --treatWarningsAsErrors",
    "test:docs": "npm run docs -- --emit none"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@changesets/types": "^6.1.0",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/node": "^22.18.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-import": "^2.32.0",
    "http-server": "^14.1.1",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "rollup": "^4.50.1",
    "theoplayer": "^10",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typedoc": "^0.28.12",
    "typedoc-plugin-external-resolver": "^1.0.3",
    "typedoc-plugin-mdn-links": "^5.0.9",
    "typescript": "^5.9.2",
    "typescript-eslint": "^7.18.0",
    "vitest": "^3.2.4"
  },
  "overrides": {
    "typedoc-plugin-external-resolver": {
      "typedoc": "$typedoc"
    }
  }
}
